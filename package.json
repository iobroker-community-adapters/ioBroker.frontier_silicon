{
  "name": "iobroker.frontier_silicon",
  "version": "0.5.0",
  "description": "Provides support for media players equipped with a Frontier Silicon chipset using FSAPI.",
  "author": {
    "name": "halloamt",
    "email": "iobroker@halloserv.de"
  },
  "homepage": "https://github.com/iobroker-community-adapters/ioBroker.frontier_silicon",
  "license": "MIT",
  "keywords": [
    "ioBroker",
    "frontier silicon",
    "media player",
    "fsapi",
    "internet radio",
    "radio",
    "music player",
    "undok"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iobroker-community-adapters/ioBroker.frontier_silicon.git"
  },
  "engines": {
    "node": ">= 20"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.3.2",
    "axios": "^1.11.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.8.0",
    "@alcalzone/release-script-plugin-iobroker": "^3.7.2",
    "@alcalzone/release-script-plugin-license": "^3.7.0",
    "@alcalzone/release-script-plugin-manual-review": "^3.7.0",
    "@iobroker/adapter-dev": "^1.4.0",
    "@iobroker/eslint-config": "^2.1.0",
    "@iobroker/testing": "^5.1.0",
    "@types/node": "^24.1.0",
    "typescript": "^5.8.3"
  },
  "main": "main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*|.eslintrc).json",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "lib/",
    "www/",
    "io-package.json",
    "LICENSE",
    "main.js"
  ],
  "scripts": {
    "test:js": "mocha --config test/mocharc.custom.json \"{!(node_modules|test)/**/*.test.js,*.test.js,test/**/test!(PackageFiles|Startup).js}\"",
    "test:package": "mocha test/package --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:js && npm run test:package",
    "check": "tsc --noEmit -p tsconfig.check.json",
    "lint": "eslint -c eslint.config.mjs .",
    "translate": "translate-adapter",
    "release": "release-script"
  },
  "bugs": {
    "url": "https://github.com/iobroker-community-adapters /ioBroker.frontier_silicon/issues"
  },
  "readmeFilename": "README.md"
}
